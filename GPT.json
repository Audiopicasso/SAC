{
  "id": "com.heikohemminger.sap.gptwidget",
  "version": "1.0.3",
  "name": "GPT Widget",
  "description": "Custom ChatGPT Widget for SAP Analytics Cloud using GPT-3.5.",
  "newInstancePrefix": "GptWidget",
  "vendor": "Heiko Hemminger",
  "eula": "",
  "license": "MIT",
  //"icon": "https://raw.githubusercontent.com/HeikoHemminger/SAC/main/icon.png",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-heikohemminger-sap-gptwidget",
      "url": "https://cdn.jsdelivr.net/gh/HeikoHemminger/SAC@main/GPT.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-heikohemminger-sap-gptwidget-builder",
      "url": "https://cdn.jsdelivr.net/gh/HeikoHemminger/SAC@main/GPT_Builder.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "apiKey": {
      "description": "API Key for OpenAI",
      "type": "string",
      "default": ""
    },
    "max_tokens": {
      "description": "Maximum token count for the result",
      "type": "integer",
      "default": 1024
    }
  },
  "methods": {
    "setApiKey": {
      "description": "Set the API Key for OpenAI",
      "parameters": [
        {
          "name": "apiKey",
          "type": "string",
          "description": "API Key"
        }
      ],
      "body": "this.apiKey = apiKey;"
    },
    "getApiKey": {
      "returnType": "string",
      "description": "Get the API Key for OpenAI",
      "body": "return this.apiKey;"
    },
    "setMax_tokens": {
      "description": "Set the maximum number of tokens",
      "parameters": [
        {
          "name": "max_tokens",
          "type": "integer",
          "description": "Maximum number of tokens"
        }
      ],
      "body": "this.max_tokens = max_tokens;"
    },
    "getMax_tokens": {
      "returnType": "integer",
      "description": "Get the maximum number of tokens",
      "body": "return this.max_tokens;"
    }
  },
  "events": {
    "onClick": {
      "description": "Triggered when the user clicks the generate button"
    }
  }
}
